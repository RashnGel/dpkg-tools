<Proxy balancer://mongrel_cluster>
  <% mongrel_ports.each do |port| -%>
  BalancerMember http://127.0.0.1:<%= port %>
  <% end -%>
</Proxy>

<VirtualHost *:80>
  ServerAdmin webskivvy@reprocessed.org
  ServerName <%= server_name %>
  <% server_aliases.each do |server_alias| -%>
  ServerAlias <%= server_alias %>
  <% end -%>
  
  ProxyPass / balancer://mongrel_cluster/
  ProxyPassReverse / balancer://mongrel_cluster/
  
  ErrorLog /var/log/apache2/<%= server_name %>/error.log
  CustomLog /var/log/apache2/<%= server_name %>/access.log combined
</VirtualHost>